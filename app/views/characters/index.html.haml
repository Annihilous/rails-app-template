%h1 Characters

.pull-right
  = link_to 'New', new_character_path, class: 'btn btn-primary'

%hr

= form_tag characters_path, method: :get do |f|
  .input-group
    = text_field_tag :q, params[:q], class:  'form-control', placeholder: 'Search'
    %span.input-group-btn
      = submit_tag 'Search', class:  'btn btn-primary btn-block'

%hr

%table.table
  %thead
    %tr
      %th Name
      %th Description
      %th Str
      %th Dex
      %th End
      %th Int
      %th Edu
      %th Soc
      %th
      %th
      %th

  %tbody
    - @characters.each do |character|
      %tr
        %td= character.name
        %td= character.description
        %td= character.strength
        %td= character.dexterity
        %td= character.endurance
        %td= character.intelligence
        %td= character.education
        %td= character.social
        %td= link_to 'Show', character
        %td= link_to 'Edit', edit_character_path(character)
        %td= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' }
